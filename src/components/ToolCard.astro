---
// src/components/ToolCard.astro
const { href, title, description, tags } = Astro.props;
---
<a href={href} class="card">
  <div class="content">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
  <div class="tags-container">
    {tags && tags.map(tag => <span class="tag">{tag}</span>)}
  </div>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding: 1.75rem;
    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 24px;
    text-decoration: none;
    color: var(--text-primary);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    backdrop-filter: blur(16px);
    box-shadow: 
      0 0 5px rgba(var(--neon-cyan), 0.1), 
      0 0 10px rgba(var(--neon-cyan), 0.1);
  }
  .card:hover {
    transform: translateY(-12px) scale(1.03);
    border-color: rgba(var(--neon-pink), 0.5);
    box-shadow: 
      0 0 15px rgba(var(--neon-pink), 0.3), 
      0 0 30px rgba(var(--neon-pink), 0.2);
  }
  .content {
    flex-grow: 1;
  }
  h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.5rem;
    font-weight: 900;
    color: #fff;
    text-shadow: 0 0 5px rgba(var(--neon-pink), 0.5);
  }
  p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.6;
  }
  .tags-container {
    margin-top: 1.5rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
  .tag {
    font-family: var(--font-family-mono);
    background-color: transparent;
    color: rgb(var(--neon-cyan));
    padding: 0.35rem 0.85rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 700;
    border: 1px solid rgba(var(--neon-cyan), 0.4);
    text-shadow: 0 0 3px rgba(var(--neon-cyan), 0.5);
    transition: all 0.3s ease;
  }
  .card:hover .tag {
    border-color: rgba(var(--neon-pink), 0.4);
    color: rgb(var(--neon-pink));
    text-shadow: 0 0 3px rgba(var(--neon-pink), 0.5);
  }
</style>