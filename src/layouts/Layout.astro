---
// src/layouts/Layout.astro
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Un portafolio de herramientas web construidas por IA." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Importamos una fuente moderna de Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

		<title>{title}</title>
	</head>
	<body>
		<!-- Fondo animado con grid -->
		<div class="animated-background">
			<div class="grid-overlay"></div>
			<div class="gradient-orb orb-1"></div>
			<div class="gradient-orb orb-2"></div>
			<div class="gradient-orb orb-3"></div>
		</div>

		<header class="main-header">
			<nav>
				<a href={`${import.meta.env.BASE_URL}`} class="logo">
					<span class="logo-icon">✨</span>
					<span>AI Factory</span>
				</a>
				<ul>
					<li><a href={`${import.meta.env.BASE_URL}`} class="nav-link">Herramientas</a></li>
					<li><a href={`${import.meta.env.BASE_URL}about`} class="nav-link">Sobre el Proyecto</a></li>
					<li>
						<button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
							<svg class="sun-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<circle cx="12" cy="12" r="5"></circle>
								<line x1="12" y1="1" x2="12" y2="3"></line>
								<line x1="12" y1="21" x2="12" y2="23"></line>
								<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
								<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
								<line x1="1" y1="12" x2="3" y2="12"></line>
								<line x1="21" y1="12" x2="23" y2="12"></line>
								<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
								<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
							</svg>
							<svg class="moon-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
							</svg>
						</button>
					</li>
				</ul>
			</nav>
		</header>
		<!-- El <slot /> es donde Astro inyectará el contenido de cada página -->
		<main>
			<slot />
		</main>

		<!-- Script para el toggle de tema -->
		<script>
			const themeToggle = document.getElementById('theme-toggle');
			const html = document.documentElement;
			
			// Cargar tema guardado o usar el del sistema
			const savedTheme = localStorage.getItem('theme');
			if (savedTheme) {
				html.setAttribute('data-theme', savedTheme);
			} else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
				html.setAttribute('data-theme', 'dark');
			} else {
				html.setAttribute('data-theme', 'light');
			}

			themeToggle?.addEventListener('click', () => {
				const currentTheme = html.getAttribute('data-theme');
				const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
				html.setAttribute('data-theme', newTheme);
				localStorage.setItem('theme', newTheme);
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		--font-family-sans: 'Inter', sans-serif;
		--font-family-mono: 'IBM Plex Mono', monospace;

		/* Light Theme - Paleta vibrante estilo Vercel/Linear */
		--background-light: #fafafa;
		--text-light: #0a0a0a;
		--text-secondary-light: #666666;
		--card-background-light: rgba(255, 255, 255, 0.8);
		--card-border-light: rgba(0, 0, 0, 0.06);
		--accent-light: 99, 102, 241; /* Indigo vibrante */
		--accent-secondary-light: 139, 92, 246; /* Purple */
		--accent-tertiary-light: 236, 72, 153; /* Pink */
		--shadow-light: rgba(0, 0, 0, 0.1);

		/* Dark Theme - Paleta premium */
		--background-dark: #0a0a0a;
		--text-dark: #ededed;
		--text-secondary-dark: #a1a1a1;
		--card-background-dark: rgba(24, 24, 27, 0.8);
		--card-border-dark: rgba(255, 255, 255, 0.1);
		--accent-dark: 129, 140, 248; /* Indigo claro */
		--accent-secondary-dark: 167, 139, 250; /* Purple claro */
		--accent-tertiary-dark: 244, 114, 182; /* Pink claro */
		--shadow-dark: rgba(0, 0, 0, 0.5);
	}

	/* Default to light theme */
	html[data-theme="light"] {
		--bg: var(--background-light);
		--text-color: var(--text-light);
		--text-secondary: var(--text-secondary-light);
		--card-bg: var(--card-background-light);
		--card-border: var(--card-border-light);
		--accent: var(--accent-light);
		--accent-secondary: var(--accent-secondary-light);
		--accent-tertiary: var(--accent-tertiary-light);
		--shadow-color: var(--shadow-light);
	}

	html[data-theme="dark"] {
		--bg: var(--background-dark);
		--text-color: var(--text-dark);
		--text-secondary: var(--text-secondary-dark);
		--card-bg: var(--card-background-dark);
		--card-border: var(--card-border-dark);
		--accent: var(--accent-dark);
		--accent-secondary: var(--accent-secondary-dark);
		--accent-tertiary: var(--accent-tertiary-dark);
		--shadow-color: var(--shadow-dark);
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		font-family: var(--font-family-sans);
		background-color: var(--bg);
		color: var(--text-color);
		transition: background-color 0.3s ease, color 0.3s ease;
		scroll-behavior: smooth;
	}

	body {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
		position: relative;
		z-index: 1;
		min-height: 100vh;
	}

	/* Fondo animado premium */
	.animated-background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		z-index: -1;
		overflow: hidden;
		pointer-events: none;
	}

	.grid-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			linear-gradient(rgba(var(--accent), 0.03) 1px, transparent 1px),
			linear-gradient(90deg, rgba(var(--accent), 0.03) 1px, transparent 1px);
		background-size: 50px 50px;
		animation: grid-move 20s linear infinite;
	}

	@keyframes grid-move {
		0% { transform: translate(0, 0); }
		100% { transform: translate(50px, 50px); }
	}

	.gradient-orb {
		position: absolute;
		border-radius: 50%;
		filter: blur(80px);
		opacity: 0.5;
		animation: float 20s ease-in-out infinite;
	}

	.orb-1 {
		width: 500px;
		height: 500px;
		background: radial-gradient(circle, rgba(var(--accent), 0.4), transparent);
		top: -250px;
		left: -250px;
		animation-delay: 0s;
	}

	.orb-2 {
		width: 400px;
		height: 400px;
		background: radial-gradient(circle, rgba(var(--accent-secondary), 0.3), transparent);
		bottom: -200px;
		right: -200px;
		animation-delay: -7s;
	}

	.orb-3 {
		width: 350px;
		height: 350px;
		background: radial-gradient(circle, rgba(var(--accent-tertiary), 0.3), transparent);
		top: 50%;
		right: 10%;
		animation-delay: -14s;
	}

	@keyframes float {
		0%, 100% { transform: translate(0, 0) scale(1); }
		25% { transform: translate(50px, -50px) scale(1.1); }
		50% { transform: translate(-30px, 30px) scale(0.9); }
		75% { transform: translate(30px, 50px) scale(1.05); }
	}

	/* Header mejorado */
	.main-header {
		padding: 2rem 0;
		margin-bottom: 3rem;
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		background: var(--card-bg);
		border: 1px solid var(--card-border);
		padding: 0.75rem 1.5rem;
		border-radius: 16px;
		box-shadow: 0 4px 12px var(--shadow-color);
	}

	.logo {
		font-weight: 900;
		font-size: 1.4rem;
		text-decoration: none;
		color: var(--text-color);
		display: flex;
		align-items: center;
		gap: 0.5rem;
		transition: transform 0.3s ease;
	}

	.logo:hover {
		transform: scale(1.05);
	}

	.logo-icon {
		font-size: 1.5rem;
		animation: sparkle 2s ease-in-out infinite;
	}

	@keyframes sparkle {
		0%, 100% { opacity: 1; transform: rotate(0deg); }
		50% { opacity: 0.7; transform: rotate(10deg); }
	}

	nav ul {
		list-style: none;
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.nav-link {
		text-decoration: none;
		color: var(--text-secondary);
		font-weight: 600;
		font-size: 0.95rem;
		padding: 0.5rem 1rem;
		border-radius: 8px;
		transition: all 0.3s ease;
		position: relative;
	}

	.nav-link:hover {
		color: var(--text-color);
		background: rgba(var(--accent), 0.1);
	}

	/* Toggle de tema mejorado */
	.theme-toggle {
		background: rgba(var(--accent), 0.1);
		border: 1px solid var(--card-border);
		border-radius: 10px;
		width: 44px;
		height: 44px;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.theme-toggle:hover {
		background: rgba(var(--accent), 0.2);
		transform: scale(1.05);
	}

	.theme-toggle svg {
		width: 20px;
		height: 20px;
		position: absolute;
		transition: all 0.3s ease;
	}

	html[data-theme="light"] .sun-icon {
		opacity: 1;
		transform: rotate(0deg);
	}

	html[data-theme="light"] .moon-icon {
		opacity: 0;
		transform: rotate(90deg);
	}

	html[data-theme="dark"] .sun-icon {
		opacity: 0;
		transform: rotate(-90deg);
	}

	html[data-theme="dark"] .moon-icon {
		opacity: 1;
		transform: rotate(0deg);
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 700;
		line-height: 1.2;
	}

	/* Responsive */
	@media (max-width: 768px) {
		body {
			padding: 0 1rem;
		}

		nav {
			flex-direction: column;
			gap: 1rem;
			padding: 1rem;
		}

		nav ul {
			flex-wrap: wrap;
			justify-content: center;
		}

		.logo {
			font-size: 1.2rem;
		}

		.orb-1, .orb-2, .orb-3 {
			width: 250px;
			height: 250px;
		}
	}
</style>