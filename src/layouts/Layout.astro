---
// src/layouts/Layout.astro
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Un portafolio de herramientas web construidas por IA." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Importamos una fuente moderna de Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">

		<title>{title}</title>
	</head>
	<body>
		<!-- El <slot /> es donde Astro inyectará el contenido de cada página -->
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-family-sans: 'Inter', sans-serif;
		--font-family-mono: 'IBM Plex Mono', monospace;

		/* Light Theme */
		--background-light: #F5F5F7;
		--text-light: #1D1D1F;
		--card-background-light: rgba(255, 255, 255, 0.6);
		--card-border-light: rgba(0, 0, 0, 0.1);
		--accent-light: 0, 122, 255; /* Apple Blue */
		--accent-dark-light: 0, 100, 210;

		/* Dark Theme */
		--background-dark: #121212;
		--text-dark: #EAEAEA;
		--card-background-dark: rgba(30, 30, 30, 0.5);
		--card-border-dark: rgba(255, 255, 255, 0.15);
		--accent-dark: 50, 170, 255; /* Lighter Blue for dark mode */
		--accent-dark-dark: 70, 190, 255;
	}

	/* Default to light theme */
	html {
		--bg: var(--background-light);
		--text-color: var(--text-light);
		--card-bg: var(--card-background-light);
		--card-border: var(--card-border-light);
		--accent: var(--accent-light);
		--accent-dark: var(--accent-dark-light);
	}

	/* Dark theme using media query */
	@media (prefers-color-scheme: dark) {
		html {
			--bg: var(--background-dark);
			--text-color: var(--text-dark);
			--card-bg: var(--card-background-dark);
			--card-border: var(--card-border-dark);
			--accent: var(--accent-dark);
			--accent-dark: var(--accent-dark-dark);
		}
	}

	html {
		font-family: var(--font-family-sans);
		background-color: var(--bg);
		color: var(--text-color);
		transition: background-color 0.3s ease, color 0.3s ease;
	}

	body {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		position: relative;
		z-index: 1;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		z-index: -1;
		background: radial-gradient(ellipse at top left, rgba(var(--accent), 0.2), transparent 50%),
					radial-gradient(ellipse at bottom right, rgba(var(--accent-dark), 0.2), transparent 50%);
		background-size: 200% 200%;
		animation: gradient-animation 15s ease infinite;
	}

	@keyframes gradient-animation {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 700;
	}
</style>