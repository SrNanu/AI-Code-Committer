---
// src/layouts/Layout.astro
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Un portafolio de herramientas web construidas por IA." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Importamos una fuente moderna de Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">

		<title>{title}</title>
	</head>
	<body>
		<!-- El <slot /> es donde Astro inyectará el contenido de cada página -->
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-family-sans: 'Inter', sans-serif;
		--font-family-mono: 'IBM Plex Mono', monospace;

		/* Neon Theme */
		--background: #0D0D0D;
		--text-primary: #E0E0E0;
		--text-secondary: #A0A0A0;
		--neon-pink: 255, 0, 255;
		--neon-cyan: 0, 255, 255;
		--card-bg: rgba(20, 20, 20, 0.65);
		--card-border: rgba(var(--neon-cyan), 0.2);
	}

	html {
		font-family: var(--font-family-sans);
		background-color: var(--background);
		color: var(--text-primary);
	}

	body {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		position: relative;
		z-index: 1;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		z-index: -1;
		background: linear-gradient(45deg, rgba(var(--neon-pink), 0.3), rgba(var(--neon-cyan), 0.3));
		background-size: 200% 200%;
		animation: gradient-flow 6s ease-in-out infinite;
		filter: blur(80px);
	}

	@keyframes gradient-flow {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 900;
	}
</style>