---
import Layout from '../../layouts/Layout.astro';

// Metadatos de la página
export const frontmatter = {
  title: 'Calculadora de Espacios de Trabajo en Casa',
  description: `Como trabajador remoto, quiero calcular el espacio necesario para mi área de trabajo en casa, para asegurarme de que tengo un entorno cómodo y eficiente.`,
  tags: ['espacio', 'trabajo', 'hogar', 'productividad']
};
---

<Layout title={frontmatter.title}>
  <a href={import.meta.env.BASE_URL} class="back-link">&larr; Volver a la Fábrica</a>
  
  <div class="tool-container">
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.description}</p>
    
    <!-- === COMIENZA EL CÓDIGO HTML DE LA HERRAMIENTA === -->
    <div class="calculator-wrapper">
      <div class="form-container">
        <div class="input-group">
          <label for="table-size">Tamaño de la mesa (cm):</label>
          <input type="number" id="table-size" class="input-field" />
        </div>
        <div class="input-group">
          <label for="chair-size">Tamaño de la silla (cm):</label>
          <input type="number" id="chair-size" class="input-field" />
        </div>
        <div class="input-group">
          <label for="monitor-size">Tamaño del monitor (cm):</label>
          <input type="number" id="monitor-size" class="input-field" />
        </div>
        <button id="calculate-btn" class="btn btn-primary">Calcular</button>
      </div>
      <div class="results-container">
        <div class="summary">
          <h3>Espacio Total Requerido</h3>
          <div class="summary-item">
            <h4>Total (cm):</h4>
            <p id="resultado">0</p>
          </div>
        </div>
      </div>
    </div>
    <!-- === TERMINA EL CÓDIGO HTML DE LA HERRAMIENTA === -->
  </div>
</Layout>

<script>
// === COMIENZA EL CÓDIGO JAVASCRIPT DE LA HERRAMIENTA ===
document.addEventListener('input', function() {
  const tableSize = parseFloat(document.getElementById('table-size').value) || 0;
  const chairSize = parseFloat(document.getElementById('chair-size').value) || 0;
  const monitorSize = parseFloat(document.getElementById('monitor-size').value) || 0;
  
  const totalSpace = tableSize + chairSize + monitorSize;
  document.getElementById('resultado').innerText = totalSpace;
});
// === TERMINA EL CÓDIGO JAVASCRIPT DE LA HERRAMIENTA ===
</script>