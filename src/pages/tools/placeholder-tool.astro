---
// src/pages/tools/placeholder-tool.astro
import Layout from '../../layouts/Layout.astro'; // <-- ¡IMPORTANTE! Importamos el layout

// Este es el "frontmatter" con los metadatos
export const frontmatter = {
  title: 'Herramienta de Ejemplo',
  description: 'Esta es una tarjeta de ejemplo para que veas cómo se verá la página de inicio mientras la IA se prepara.',
  tags: ['ejemplo', 'astro']
};
---

<!-- Envolvemos TODO el contenido en nuestro componente Layout -->
<Layout title={frontmatter.title}>
  
  <!-- Este es el contenido específico de la página -->
  <a href="/" class="back-link">&larr; Volver a la Fábrica</a>
  
  <div class="tool-container">
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.description}</p>
    
    <!-- Aquí iría el código HTML/CSS/JS de la herramienta -->
    <div class="tool-content">
      <h2>¡Contenido de la Herramienta!</h2>
      <p>El componente interactivo generado por la IA aparecerá aquí.</p>
    </div>
  </div>

</Layout>

<style>
  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    text-decoration: none;
    font-weight: 700;
    color: #333;
  }
  .tool-container {
    padding: 2rem;
    border: 1px solid #eee;
    border-radius: 12px;
  }
  .tool-content {
    margin-top: 2rem;
    padding: 2rem; 
    background: #f9f9f9; 
    border-radius: 8px;
  }
</style>