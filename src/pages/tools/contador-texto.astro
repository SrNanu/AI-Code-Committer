---
import Layout from '../../layouts/Layout.astro';

export const frontmatter = {
  title: 'Contador de Caracteres y Palabras',
  description: 'Como creador de contenido, quiero una herramienta web donde pueda pegar un texto y ver en tiempo real el recuento de caracteres, palabras y párrafos para ajustarme a los límites de redes sociales o artículos.',
  tags: ['texto', 'utilidad', 'contador', 'seo']
};
---

<Layout title={frontmatter.title}>
  <a href={import.meta.env.BASE_URL} class="back-link">&larr; Volver a la Fábrica</a>
  
  <div class="tool-container">
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.description}</p>
    
    <div class="input-group">
      <label for="text-input">Introduce tu texto:</label>
      <textarea id="text-input" class="input-field" rows="10" placeholder="Pega tu texto aquí..."></textarea>
    </div>

    <div class="results-container">
      <p id="char-count">Caracteres: 0</p>
      <p id="word-count">Palabras: 0</p>
      <p id="paragraph-count">Párrafos: 0</p>
    </div>
  </div>

</Layout>

<script>
  const textInput = document.getElementById('text-input');
  const charCount = document.getElementById('char-count');
  const wordCount = document.getElementById('word-count');
  const paragraphCount = document.getElementById('paragraph-count');

  textInput.addEventListener('input', () => {
    const text = textInput.value;

    // Contar caracteres
    const characters = text.length;

    // Contar palabras
    const words = text.trim() ? text.trim().split(/\s+/).length : 0;

    // Contar párrafos
    const paragraphs = text.trim() ? text.split(/\n+/).length : 0;

    // Actualizar los contadores
    charCount.textContent = `Caracteres: ${characters}`;
    wordCount.textContent = `Palabras: ${words}`;
    paragraphCount.textContent = `Párrafos: ${paragraphs}`;
  });
</script>