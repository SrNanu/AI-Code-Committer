---
import Layout from '../../layouts/Layout.astro';

export const frontmatter = {
  title: 'Contador de Caracteres y Palabras',
  description: '',
  tags: ['texto', 'utilidad', 'contador', 'seo']
};
---

<Layout title={frontmatter.title}>
  <a href={import.meta.env.BASE_URL} class="back-link">&larr; Volver a la Fábrica</a>
  
  <main>
    <h1>Contador de Caracteres y Palabras</h1>
    <textarea id="inputText" placeholder="Escribe tu texto aquí..." rows="10" cols="50"></textarea>
    <div id="result">
      <p id="charCount">Número de caracteres: 0</p>
      <p id="wordCount">Número de palabras: 0</p>
    </div>
  </main>
</Layout>

<script>
  const inputText = document.getElementById('inputText');
  const charCount = document.getElementById('charCount');
  const wordCount = document.getElementById('wordCount');

  inputText.addEventListener('input', function() {
    const text = inputText.value;
    const characters = text.length;
    const words = text.trim() === '' ? 0 : text.trim().split(/\s+/).length;

    charCount.textContent = 'Número de caracteres: ' + characters;
    wordCount.textContent = 'Número de palabras: ' + words;
  });
</script>

<style>
  body {
    font-family: Arial, sans-serif;
    margin: 20px;
  }

  .back-link {
    text-decoration: none;
    color: blue;
    margin-bottom: 10px;
    display: inline-block;
  }

  main {
    border: 1px solid #ccc;
    padding: 20px;
    border-radius: 5px;
  }

  textarea {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
  }

  #result {
    font-size: 16px;
  }
</style>