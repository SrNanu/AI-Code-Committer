---
import Layout from '../../layouts/Layout.astro';

export const frontmatter = {
  title: 'Generador de Nombres de Usuario',
  description: 'Como usuario nuevo en una plataforma, quiero una herramienta que genere nombres de usuario creativos y únicos. Debe tener un campo para introducir una palabra clave (ej: "gamer") y un botón para generar una lista de 5 sugerencias combinando la palabra clave con adjetivos o números aleatorios.',
  tags: ['generador', 'usuario', 'herramienta', 'creatividad']
};
---

<Layout title={frontmatter.title}>
  <a href={import.meta.env.BASE_URL} class="back-link">&larr; Volver a la Fábrica</a>
  
  <div class="tool-container">
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.description}</p>
    
    <div class="calculator-wrapper">
      
      <div class="form-container">
        <div class="input-group">
          <label for="keyword-input">Palabra Clave</label>
          <input id="keyword-input" type="text" class="input-field" placeholder="Ej: gamer">
        </div>
        <button id="generate-button" class="generate-button">Generar Nombres de Usuario</button>
      </div>

      <div class="results-container">
        <div class="summary">
          <div class="summary-item">
            <h4>Resultado 1</h4>
            <p id="resultado-1">0</p>
          </div>
          <div class="summary-item">
            <h4>Resultado 2</h4>
            <p id="resultado-2">0</p>
          </div>
          <div class="summary-item">
            <h4>Resultado 3</h4>
            <p id="resultado-3">0</p>
          </div>
          <div class="summary-item">
            <h4>Resultado 4</h4>
            <p id="resultado-4">0</p>
          </div>
          <div class="summary-item">
            <h4>Resultado 5</h4>
            <p id="resultado-5">0</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>

<script>
  const adjectives = ["Cool", "Epic", "Fun", "Mighty", "Ninja", "Speedy", "Savvy", "Charming", "Creative", "Bold"];
  const generateUsernames = () => {
    const keyword = document.getElementById('keyword-input').value;
    const results = [];
    for (let i = 0; i < 5; i++) {
      const randomAdj = adjectives[Math.floor(Math.random() * adjectives.length)];
      const randomNum = Math.floor(Math.random() * 100);
      results.push(`${randomAdj}${keyword}${randomNum}`);
    }
    for (let i = 0; i < results.length; i++) {
      document.getElementById(`resultado-${i + 1}`).textContent = results[i];
    }
  };

  document.getElementById('generate-button').addEventListener('click', generateUsernames);
</script>