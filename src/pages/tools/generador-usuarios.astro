---
import Layout from '../../layouts/Layout.astro';

export const frontmatter = {
  title: 'Generador de Nombres de Usuario',
  description: 'Como usuario nuevo en una plataforma, quiero una herramienta que genere nombres de usuario creativos y únicos. Debe tener un campo para introducir una palabra clave (ej: "gamer") y un botón para generar una lista de 5 sugerencias combinando la palabra clave con adjetivos o números aleatorios.',
  tags: ['generador', 'usuario', 'herramienta', 'creatividad']
};
---

<Layout title={frontmatter.title}>
  <a href={import.meta.env.BASE_URL} class="back-link">&larr; Volver a la Fábrica</a>
  
  <div class="tool-container">
    <div class="form-container">
      <div class="input-group">
        <label for="keyword">Introduce una palabra clave:</label>
        <input type="text" id="keyword" placeholder="ej: gamer" />
      </div>
      <button id="generate-btn">Generar Nombres de Usuario</button>
    </div>
    <div class="results-container">
      <h2>Sugerencias:</h2>
      <div id="results" class="summary"></div>
    </div>
  </div>
</Layout>

<script>
  document.getElementById('generate-btn').addEventListener('click', function() {
    const keyword = document.getElementById('keyword').value.trim();
    const resultsContainer = document.getElementById('results');
    resultsContainer.innerHTML = '';

    const adjectives = ['Cool', 'Funny', 'Epic', 'Awesome', 'Crazy'];
    const numbers = Math.floor(Math.random() * 1000);
    
    const suggestions = [];

    for (let i = 0; i < 5; i++) {
      const randomAdj = adjectives[Math.floor(Math.random() * adjectives.length)];
      const suggestion = `${randomAdj}${keyword}${Math.floor(Math.random() * numbers)}`;
      suggestions.push(suggestion);
    }

    suggestions.forEach(suggestion => {
      const item = document.createElement('div');
      item.className = 'summary-item';
      item.textContent = suggestion;
      resultsContainer.appendChild(item);
    });
  });
</script>