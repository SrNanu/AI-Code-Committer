---
import Layout from '../../layouts/Layout.astro';

// Metadatos de la página
export const frontmatter = {
  title: 'Planificador de Reuniones Efectivas',
  description: `Como profesional ocupado, quiero una herramienta que me ayude a estructurar mis reuniones con agendas y tiempos definidos, para maximizar la productividad y asegurar que se cubran todos los puntos importantes.`,
  tags: ['reuniones', 'productividad', 'planificación', 'gestión', 'agendas']
};
---

<Layout title={frontmatter.title}>
  <a href={import.meta.env.BASE_URL} class="back-link">&larr; Volver a la Fábrica</a>
  
  <div class="tool-container">
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.description}</p>
    
    <!-- === COMIENZA EL CÓDIGO HTML DE LA HERRAMIENTA === -->
    <div class="calculator-wrapper">
      <div class="form-container">
        <div class="input-group">
          <label for="meetingTitle">Título de la Reunión</label>
          <input type="text" id="meetingTitle" class="input-field" placeholder="Ingrese el título de la reunión" />
        </div>
        <div class="input-group">
          <label for="agendaItems">Agenda (separar por comas)</label>
          <textarea id="agendaItems" class="input-field" placeholder="Ingrese los puntos de la agenda"></textarea>
        </div>
        <div class="input-group">
          <label for="meetingDuration">Duración (en minutos)</label>
          <input type="number" id="meetingDuration" class="input-field" placeholder="Ingrese la duración de la reunión" />
        </div>
        <button id="generatePlan" class="btn btn-primary">Generar Plan de Reunión</button>
      </div>
      <div class="results-container">
        <div class="summary">
          <h2>Plan de Reunión</h2>
          <div class="summary-item">
            <h4>Título</h4>
            <p id="resultTitle"></p>
          </div>
          <div class="summary-item">
            <h4>Agenda</h4>
            <p id="resultAgenda"></p>
          </div>
          <div class="summary-item">
            <h4>Duración</h4>
            <p id="resultDuration"></p>
          </div>
        </div>
      </div>
    </div>
    <!-- === TERMINA EL CÓDIGO HTML DE LA HERRAMIENTA === -->
  </div>
</Layout>

<script>
// === COMIENZA EL CÓDIGO JAVASCRIPT DE LA HERRAMIENTA ===
document.getElementById('generatePlan').addEventListener('click', function() {
  const meetingTitle = document.getElementById('meetingTitle').value;
  const agendaItems = document.getElementById('agendaItems').value.split(',').map(item => item.trim()).join(', ');
  const meetingDuration = document.getElementById('meetingDuration').value;

  document.getElementById('resultTitle').textContent = meetingTitle || 'No se ha ingresado un título.';
  document.getElementById('resultAgenda').textContent = agendaItems || 'No se han ingresado puntos de agenda.';
  document.getElementById('resultDuration').textContent = meetingDuration ? `${meetingDuration} minutos` : 'No se ha ingresado duración.';
});
// === TERMINA EL CÓDIGO JAVASCRIPT DE LA HERRAMIENTA ===
</script>