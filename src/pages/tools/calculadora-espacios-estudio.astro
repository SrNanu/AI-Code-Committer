---
import Layout from '../../layouts/Layout.astro';

// Metadatos de la página
export const frontmatter = {
  title: 'Calculadora de Espacios de Estudio',
  description: `Como estudiante, quiero calcular el espacio necesario para mis materiales de estudio, para organizar mi área de trabajo de manera eficiente.`,
  tags: ['estudio', 'organización', 'espacio', 'productividad']
};
---

<Layout title={frontmatter.title}>
  <a href={import.meta.env.BASE_URL} class="back-link">&larr; Volver a la Fábrica</a>
  
  <div class="tool-container">
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.description}</p>
    
    <!-- === COMIENZA EL CÓDIGO HTML DE LA HERRAMIENTA === -->
    <div class="calculator-wrapper">
      <div class="form-container">
        <div class="input-group">
          <label for="numBooks">Número de Libros:</label>
          <input id="numBooks" type="number" class="input-field" min="0" />
        </div>
        <div class="input-group">
          <label for="numNotebooks">Número de Cuadernos:</label>
          <input id="numNotebooks" type="number" class="input-field" min="0" />
        </div>
        <div class="input-group">
          <label for="numDevices">Número de Dispositivos Electrónicos:</label>
          <input id="numDevices" type="number" class="input-field" min="0" />
        </div>
        <button id="calculateBtn" class="btn btn-primary">Calcular Espacio</button>
      </div>
      <div class="results-container">
        <div class="summary">
          <div class="summary-item">
            <h4>Espacio Total Requerido</h4>
            <p id="totalSpace">0 m²</p>
          </div>
        </div>
      </div>
    </div>
    <!-- === TERMINA EL CÓDIGO HTML DE LA HERRAMIENTA === -->
  </div>
</Layout>

<script>
// === COMIENZA EL CÓDIGO JAVASCRIPT DE LA HERRAMIENTA ===
document.getElementById('calculateBtn').addEventListener('click', function() {
  const numBooks = parseInt(document.getElementById('numBooks').value) || 0;
  const numNotebooks = parseInt(document.getElementById('numNotebooks').value) || 0;
  const numDevices = parseInt(document.getElementById('numDevices').value) || 0;

  // Espacio requerido por tipo de material (en m²)
  const spacePerBook = 0.1; // 0.1 m² por libro
  const spacePerNotebook = 0.05; // 0.05 m² por cuaderno
  const spacePerDevice = 0.2; // 0.2 m² por dispositivo

  // Cálculo del espacio total
  const totalSpace = (numBooks * spacePerBook) + (numNotebooks * spacePerNotebook) + (numDevices * spacePerDevice);
  
  // Mostrar el resultado en el DOM
  document.getElementById('totalSpace').textContent = totalSpace.toFixed(2) + ' m²';
});
// === TERMINA EL CÓDIGO JAVASCRIPT DE LA HERRAMIENTA ===
</script>