<style>
  .about-section {
    padding: 2rem 0;
    animation: fade-in 0.8s ease-out;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero {
    text-align: center;
    margin-bottom: 5rem;
    animation: fade-in-down 0.8s ease-out;
  }

  @keyframes fade-in-down {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .section-title {
    font-size: 4.5rem;
    font-weight: 900;
    margin-bottom: 1rem;
    background: linear-gradient(
      135deg,
      rgb(var(--accent)),
      rgb(var(--accent-secondary)),
      rgb(var(--accent-tertiary))
    );
    background-size: 200% 200%;
    animation: gradient-shift 8s ease infinite;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .hero-subtitle {
    font-size: 1.35rem;
    color: var(--text-secondary);
    font-weight: 400;
  }

  .about-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .intro-card, .mission-card {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 24px;
    padding: 3rem;
    margin-bottom: 3rem;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: 0 8px 24px var(--shadow-color);
    animation: fade-in 1s ease-out 0.2s backwards;
  }

  .icon, .mission-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    display: inline-block;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .intro-card h2, .mission-card h2 {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, rgb(var(--accent)), rgb(var(--accent-secondary)));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .intro-card p, .mission-card p {
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  strong {
    color: var(--text-color);
    font-weight: 700;
  }

  .process-section {
    margin: 5rem 0;
    animation: fade-in 1s ease-out 0.4s backwards;
  }

  .process-title {
    font-size: 2.5rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, rgb(var(--accent)), rgb(var(--accent-tertiary)));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .process-description {
    text-align: center;
    font-size: 1.15rem;
    color: var(--text-secondary);
    max-width: 70ch;
    margin: 0 auto 4rem;
    line-height: 1.8;
  }

  .timeline {
    display: grid;
    gap: 2rem;
    position: relative;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      to bottom,
      rgba(var(--accent), 0.5),
      rgba(var(--accent-secondary), 0.5),
      rgba(var(--accent-tertiary), 0.5)
    );
    transform: translateX(-50%);
  }

  .timeline-item {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 2rem;
    align-items: center;
    animation: slide-in 0.8s ease-out backwards;
  }

  .timeline-item:nth-child(1) { animation-delay: 0.5s; }
  .timeline-item:nth-child(2) { animation-delay: 0.6s; }
  .timeline-item:nth-child(3) { animation-delay: 0.7s; }
  .timeline-item:nth-child(4) { animation-delay: 0.8s; }

  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .timeline-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    background: var(--card-bg);
    border: 2px solid rgba(var(--accent), 0.3);
    border-radius: 50%;
    box-shadow: 0 8px 24px var(--shadow-color);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    grid-column: 2;
    z-index: 1;
  }

  .timeline-content {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--card-border);
    box-shadow: 0 4px 16px var(--shadow-color);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .timeline-item:nth-child(odd) .timeline-content {
    grid-column: 1;
  }

  .timeline-item:nth-child(even) .timeline-content {
    grid-column: 3;
  }

  .timeline-content h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-color);
  }

  .timeline-content p {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .cta-section {
    text-align: center;
    margin-top: 5rem;
    animation: fade-in 1s ease-out 0.9s backwards;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.25rem 2.5rem;
    font-size: 1.15rem;
    font-weight: 700;
    text-decoration: none;
    color: white;
    background: linear-gradient(135deg, rgb(var(--accent)), rgb(var(--accent-secondary)));
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(var(--accent), 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cta-button:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 12px 32px rgba(var(--accent), 0.4);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .intro-card, .mission-card {
      padding: 2rem;
    }

    .process-title {
      font-size: 2rem;
    }

    .timeline::before {
      left: 32px;
    }

    .timeline-item {
      grid-template-columns: auto 1fr;
      gap: 1.5rem;
    }

    .timeline-icon {
      width: 48px;
      height: 48px;
      font-size: 1.5rem;
      grid-column: 1;
    }

    .timeline-content {
      grid-column: 2 !important;
      padding: 1.5rem;
    }

    .cta-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
